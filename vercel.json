{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/api/index.js"
        },
        {
          "src": "^/static/(.*)",
          "dest": "/client/static/$1"
        },
        {
           "src": "/(.*)\\.png",
           "dest": "/client/$1.png"
         },
        {
          "src": "/(.*)",
          "dest": "/client/index.html"
        }
      ],
        "rewrites": [
          {
            "source": "/((?!api/.*).*)",
            "destination": "/index.html"
          }
        ]
      
  }
  